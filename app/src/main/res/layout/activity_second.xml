<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkthemebackground"
    tools:context=".secondActivity">

    <ImageView
        android:id="@+id/generationiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/checkBoxLabelStart"
        android:layout_marginTop="@dimen/genimagetop"
        android:layout_marginEnd="@dimen/checkBoxLabelStart"
        android:layout_marginBottom="@dimen/pokemonPicHeight"
        android:src="@drawable/gen1starterpics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="@dimen/nextimagewidth"
        android:layout_height="@dimen/nextimageheight"
        android:layout_marginStart="@dimen/nextStart"
        android:layout_marginTop="@dimen/nextTop"
        android:layout_marginEnd="@dimen/nextEnd"
        android:drawableBottom="@android:drawable/ic_menu_send"
        android:onClick="shareInfo"
        android:text="@string/next"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/checkBoxLabelStart"
        android:layout_marginTop="@dimen/pokemonPicHeight"
        android:layout_marginEnd="@dimen/checkBoxStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/RBchoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/checkBoxStart"
            android:layout_marginTop="@dimen/radiobtTop"
            android:layout_marginEnd="@dimen/checkBoxStart"
            android:width="@dimen/radiowidth"
            android:background="@drawable/rounded_corner_checks"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/checkBoxTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/RBchoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/checkBoxStart"
            android:layout_marginTop="@dimen/radiobtNext"
            android:layout_marginEnd="@dimen/checkBoxStart"
            android:width="@dimen/radiowidth"
            android:background="@drawable/rounded_corner_checks"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/checkBoxTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/RBchoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/checkBoxStart"
            android:layout_marginTop="@dimen/radiobtNext"
            android:layout_marginEnd="@dimen/checkBoxStart"
            android:width="@dimen/radiowidth"
            android:background="@drawable/rounded_corner_checks"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/checkBoxTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/checkBoxLabelStart"
        android:layout_marginTop="@dimen/checkBoxLabel"
        android:layout_marginEnd="@dimen/checkBoxLabelStart"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:soundEffectsEnabled="false"
        android:text="@string/genText"
        android:textColor="@color/lightBlue"
        android:textSize="@dimen/checkBoxTextSizeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pokeimageheight"
        android:layout_marginTop="@dimen/checkBoxLabelStart"
        android:src="@drawable/pokemonlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>